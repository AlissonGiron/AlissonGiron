<script>
    $(document).ready(function() {
        $("#hamburger").on('click', function() {
            var menu = $('.menu');
            
            if(menu.hasClass('menu-open'))
            {
                $("#menu-content").addClass('hidden');

                setTimeout(function () { menu.removeClass('menu-open'); }, 100);
            }
            else {
                $(".hamburger-fill").hide();
                $("#hamburger").addClass('hamburger-clicked');
                
                menu.addClass('menu-open');
                
                setTimeout(function () { 
                    $("#menu-content").removeClass('hidden');
                    $("#hamburger").removeClass('hamburger-clicked'); 
                    $(".hamburger-fill").show();
                }, 250);
            }
        });
    });
</script>


