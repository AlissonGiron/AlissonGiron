@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<style>

html, body {
    padding: 0;
    margin: 0;
    background-color: darkslategrey;
    overflow: hidden;
}

h1, h2 {
    font-family: monospace;
}

h1 {
    font-size: 60px;
    color: #e0dfc7;
}

h2 {
    font-size: 20px;
    color: lightgreen;
    border-bottom: 1px solid;
    border-top: 1px solid;
    padding: 10px 0;
}

.leftDiv {
    height: 100vh;
    display: flex; 
    align-items: center;
    justify-content: center;
}

.background-video-blur {
    width: 50vw;
    height: 100vh;
    background-color: black;
    position: absolute;
    left: 0;
    z-index: 5;
    opacity: 0.9;
    transform: skew(30deg);
    transition: all 0.2s linear;
}

.background-video-blur.normal {
    transition: all 0.2s linear;
    width: 100%;
    transform: skew(0);
}

.about {
    z-index: 20;
    color: lightgreen;
    font-family: monospace;
    font-size: 14px;
    opacity: 0;
}

.about.visible {
    opacity: 1;
    position: relative;
    transition: all 2s linear;
}

.btn-link:hover {
    transform: scale(1.05);
    transition: all linear 0.1s;
}

.info-card {
    background-color: white;
    box-shadow: 0 5px 4px -5px darkgrey;
    border-radius: 10px;
    padding: 10px;
}

p {
    font-family: monospace;
}

.background-gif {
    /* background-image:url('images/background.gif'); */
    background-image: url('images/blur-bulb-close-up-371906.jpg');
    background-position: center;
    background-size: cover;
    height: 100vh;
    width: 100vw;
    position: absolute;
}

.menu-open {
    width: 100vw;
    height: 100vh;
    margin: 0;
    border-bottom-right-radius: 0;
    background-color: whitesmoke;
}

.navbar {
    position: absolute; 
    color: lightgreen; 
    z-index: 30; 
    right: 0; 
    top:0; 
    padding: 20px; 
}

.navbar a {
    text-decoration: none;
    color: lightgreen;
    padding: 10px;
    margin: 10px;
    font-family: monospace;
    border-radius: 5px;
}

.navbar a:hover {
    color: whitesmoke;
    cursor: pointer;
}

.principal {
    border: 1px solid lightgreen;
}


.principal:hover {
    border: 1px solid whitesmoke;
}

.vertical-center {
    position: absolute;
    padding-top:100%;
    -webkit-transform: translateY(-50%);
    -moz-transform: translateY(-50%);
    -o-transform: translateY(-50%);
    -ms-transform: translateY(-50%);
    transform: translateY(-50%);    
}


@@media (max-width: 720px)
{
    h1 {
        font-size: 35px;
    }

    h2 {
        font-size: 14px;
    }
}

@@media (max-width: 992px)
{
    html, body {
        overflow-y: auto;
    }

    .rightDiv {
        height: 100%;
    }

    #footer-social {
        margin-top: 50px;
        margin-bottom: 50px;
    }

    .background-gif { 
        width: 100vw;
    }

    .background-video-blur {
        width: 100vw;
    }

    .info-card {
        text-align: center;
    }

    .background-video-blur {
        transform: skew(0);
    }
}

</style>
    
