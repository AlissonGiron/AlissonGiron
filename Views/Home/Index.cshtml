}


.hamburger-fill {
    height: 5px; 
    background-color: lightgreen; 
    width: 100%; 
    border-radius: 10px;  
    margin-top: 5px;
}

#hamburger {
    position: fixed;
    z-index: 10000;
    margin: 20px; 
    height: 30px; 
    width: 40px;

    -webkit-transition: all 0.2s ease-in-out;
    -moz-transition: all 0.2s ease-in-out;
    -o-transition: all 0.2s ease-in-out;
    transition: all 0.2s ease-in-out;
}

#hamburger.hamburger-clicked {
    border-radius: 100%;
    margin: 20px; 
    height: 20px; 
    width: 20px;
    background-color: lightgreen;
}

#hamburger:hover {
    cursor: pointer;
}

.menu {
    position: fixed;
    background-color: whitesmoke;
    z-index: 1000;
    
    width: 0;
    height: 0;
    border-bottom-right-radius: 100%;
    background-color: lightgreen;

    -webkit-transition: all 0.2s ease-in-out;
    -moz-transition: all 0.2s ease-in-out;
    -o-transition: all 0.2s ease-in-out;
    transition: all 0.2s ease-in-out;
}

.background-gif {
    background-image:url('images/background.gif');
    background-position: center;
    background-size: cover;
    height: 100vh;
    width: 50vw;
    position: absolute;
}

.menu-open {
    width: 100vw;
    height: 100vh;
    margin: 0;
    border-bottom-right-radius: 0;
    background-color: whitesmoke;
}


@@media (max-width: 720px)
{
    h1 {
        font-size: 35px;
    }

    h2 {
        font-size: 14px;
    }
}

@@media (max-width: 992px)
{
    html, body {
        overflow-y: auto;
    }

    .rightDiv {
        height: 100%;
    }

    #footer-social {
        margin-top: 50px;
