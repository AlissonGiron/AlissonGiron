}

.btn-link:hover {
    transform: scale(1.05);
    transition: all linear 0.1s;
}

.info-card {
    background-color: white;
    box-shadow: 0 5px 4px -5px darkgrey;
    border-radius: 10px;
    padding: 10px;
}

