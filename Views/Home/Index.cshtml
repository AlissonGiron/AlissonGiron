<script>
    var music_id = "";

    $(document).ready(function() {
        $("#spotify-info").hide();

        setInterval(getSpotify, 3000);
    });

    function getSpotify() {
        $.ajax({
            url: "https://api.spotify.com/v1/me/player/currently-playing",
            type: "GET",
            beforeSend: function(xhr) {
                xhr.setRequestHeader('Authorization', 'Bearer BQCrOWl7eHSxxiRmoAJa_Flt-e5l85HoNFBLs_-jYXtQqAR4aaavVQZdmpwTIkB-1K-hGVcxC4L4JdDEgcCv3lY-mtrX56tgeeXk4JphXUQlBjXmjzsZg0ih3ThNHVmz9-CP_WKuinf4a6BHtGlhg0Y');
            }
        })
        .done(function (data) { 
            if(data == undefined || (data.item.id == music_id && data.is_playing)) return;

            if(!data.is_playing || data.is_playing == undefined) {
                $("#spotify-info").hide();
                music_id = "";  
                return;
            }

            var curMusic = {
                music_name: "",
                artist_name: "",
                icon_url: "",
                link: "",
                duration: 0,
                progress: 0
            }

            curMusic.music_name = data.item.name;
            curMusic.icon_url = data.item.album.images[0].url;

            curMusic.link = data.item.external_urls.spotify;
            curMusic.duration = data.item.duration_ms;
            curMusic.progress = data.progress_ms;

            var artists = data.item.artists.map(function(o) { return o.name; });
            curMusic.artist_name = artists[0];

            for(var i = 1; i < artists.lenght; i++)
            {
                curMusic.artist_name += " | " + artists[i];
            }

            $("#icon_music").attr('src', curMusic.icon_url);
            $("#music_name").html(curMusic.music_name);
            $("#artist_name").html(curMusic.artist_name);
            $("#spotify-info").attr('href', curMusic.link);

            music_id = data.item.id;
            $("#spotify-info").show();
        })
        .fail(function (data) { console.log(data); });
    }
</script>



