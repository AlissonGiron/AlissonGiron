<script>
    $(".navbar a").click(function(e) {
        $(".navbar a").removeClass('principal');
        $(e.target).addClass('principal');

        if(e.target.innerHTML !== "Sobre") 
        {
            $(".background-video-blur").removeClass('normal');
            $(".about").removeClass('visible');
        }
    });

    function showAbout() {
        $(".background-video-blur").addClass('normal');
        $(".about").addClass('visible');
    }
</script>