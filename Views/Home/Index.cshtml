.hamburger-fill {
    height: 5px; 
    background-color: lightgreen; 
    width: 100%; 
    border-radius: 10px;  
    margin-top: 5px;
}

#hamburger {
    position: fixed;
    z-index: 10000;
    margin: 20px; 
    height: 30px; 
    width: 40px;

    -webkit-transition: all 0.2s ease-in-out;
    -moz-transition: all 0.2s ease-in-out;
    -o-transition: all 0.2s ease-in-out;
    transition: all 0.2s ease-in-out;
}

#hamburger.hamburger-clicked {
    border-radius: 100%;
    margin: 20px; 
    height: 20px; 
    width: 20px;
    background-color: lightgreen;
    color: transparent;
}

#hamburger:hover {
    cursor: pointer;
}

.menu {
    position: fixed;
    background-color: whitesmoke;
    z-index: 1000;
    
    width: 0;
    height: 0;
    border-bottom-right-radius: 100%;
    background-color: lightgreen;

    -webkit-transition: all 0.2s ease-in-out;
    -moz-transition: all 0.2s ease-in-out;
    -o-transition: all 0.2s ease-in-out;
    transition: all 0.2s ease-in-out;
}

.background-gif {
    /* background-image:url('images/background.gif'); */
    background-image: url('images/blur-bulb-close-up-371906.jpg');
    background-position: center;
    background-size: cover;
    height: 100vh;
    width: 100vw;
    position: absolute;
}

.menu-open {
    width: 100vw;
    height: 100vh;
    margin: 0;
    border-bottom-right-radius: 0;
    background-color: whitesmoke;
}

.navbar {
    position: absolute; 
    color: lightgreen; 
    z-index: 10; 
    right: 0; 
    top:0; 
    padding: 20px; 
}

.navbar a {
    text-decoration: none;
    color: lightgreen;
    padding: 10px;
    margin: 10px;
    font-family: monospace;
    border-radius: 5px;
}

#spotify-info {
    position: absolute;
    top: 5px;
    left: 10px;
    width: auto;
    padding-left: 20px;
    padding-right: 50px;
    height: 80px;
    border: 1px solid lightgreen;
    z-index: 100;
    margin: 20px;
    border-radius: 10px;
}

#spotify-info div {
    height: 100%;
}

#spotify-info h4 {
    color: lightgreen;
}

#spotify-info:hover {
    transform: scale(1.02);
